<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ayhanunal.newsappdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/image_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/image_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsAppDemo"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.HomeActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".view.MainActivity" android:theme="@style/SplashTheme" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>